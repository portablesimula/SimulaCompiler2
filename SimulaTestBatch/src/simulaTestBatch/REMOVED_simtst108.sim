external class SimulaTest;

SimulaTest(108,"--- Simple Co-Routine Sample 1: detach - call") begin
   integer traceCase;
   text array facit(0:6);
   ref(AA) x;
   
   procedure trace(msg); text msg;
   begin
%      if verbose then begin outtext(msg); outimage; end;
      if msg <> facit(traceCase) then
      begin
         err("Case " & edit(traceCase));
%         outtext("Trace: " & msg); outimage;
%         outtext("Facit: " & facit(traceCase)); outimage;
      end;
      traceCase:=traceCase+1;
   end;
   
   class AA;
   begin
      integer i;
      trace("AA: State 1(Initiating)");
      detach;     
      trace("AA: State 2");
      detach;
      trace("AA: State 3(Terminating)");
   end AA;
   
   
   facit(0):-"Main: Before new AA";
   facit(1):-"AA: State 1(Initiating)";
   facit(2):-"Main: Before first call";
   facit(3):-"AA: State 2";
   facit(4):-"Main: Before second call";
   facit(5):-"AA: State 3(Terminating)";
   facit(6):-"Main: Before third call";
   
   begin
%      trace("Main: Before new AA");
	  outtext("XXXXXXXXXXXXXXXXXXXXX");
      x:-new AA;
	  outtext("ZZZZZZZZZZZZZZZZZZZZZ");
      trace("Main: Before first call");
      call(x);
      trace("Main: Before second call");
      call(x);
      trace("Main: Before third call");
      !call(x); !Will cause ERROR: Call(x): x is not in detached state.
   end subBlock;
   
   
end program;